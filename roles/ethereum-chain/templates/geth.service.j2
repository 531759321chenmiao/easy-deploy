[Unit]
Description=Ethereum Client
After=syslog.target network.target

[Service]
User=ethereum
Group=ethereum
Restart=always
RestartSec=10s
ExecStart=/usr/bin/geth --mainnet --cache 2048 --http --http.addr=0.0.0.0 --syncmode light --http.api eth,net,web3,personal --datadir={{ chain_mountpoint }}/ethereum
StandardOutput=null

[Install]
WantedBy=multi-user.target
