[Unit]
Description=Ethereum Client
After=syslog.target network.target

[Service]
User=ethereum
Group=ethereum
Restart=always
RestartSec=10s
ExecStart=/usr/bin/geth --mainnet --cache 2048 --http --http.addr=0.0.0.0 --http.api eth,net,engine,admin --authrpc.addr 0.0.0.0 --authrpc.port 8551 --authrpc.vhosts 0.0.0.0 --authrpc.jwtsecret /tmp/gethjwt.hex --datadir={{ chain_mountpoint }}/ethereum
StandardOutput=null

[Install]
WantedBy=multi-user.target
